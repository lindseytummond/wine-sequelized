<body class="winery">
    
    <div class="jumbotron" id="jumbo">
        <h1 class="text-center">Wine Tasting</h1>
    </div>
  
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center" id="wineTry">Wines I want to Try:</h2>

        <ul>
          {{#each wines}}
            {{#unless taste}}
              {{!-- {{> wines/wine-block taste=true}} --}}
              <li>
              {{name}}

                <button class="change-taste" data-id="{{id}}" data-newtaste="{{taste}}">
                  {{#if taste}}Great Wine{{else}}Love to Try It{{/if}}
                </button>

              </li>
            {{/unless}}
          {{/each}}
        </ul>

      </div>

      <div class="col-md-6">
        <h2 class="text-center" id="wineTry">Wines I have Tried:</h2>

        <ul>
          {{#each wines}}
            {{#if taste}}
              {{!-- {{> wines/wine-block taste=false}} --}}
              <li>
              {{name}}

                <button class="change-taste" data-id="{{id}}" data-newtaste="{{taste}}">
                  {{#if taste}}Great Wine{{else}}Love to Try It{{/if}}
                </button>

              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div> 
    </div>

    <br><br>
    <div class="row text-center">
      <div class="col-md-12">

         <h2>Add a Wine</h2>

        <form class="create-form">

          <div class="form-group">
            <label for="wine" id="name">Wine Name:</label>
            <input type="text" id="wine" name="name">
          </div>

          <button type="submit" id="submit">Add Wine</button>
        </form>

      </div>
    </div>



